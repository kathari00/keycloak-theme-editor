{
  "name": "keycloak-theme-editor",
  "type": "module",
  "version": "1.0.10",
  "description": "Visual theme editor for Keycloak login pages. Style, preview, and export Keycloak themes without cloning or forking.",
  "license": "Apache-2.0",
  "bin": {
    "keycloak-theme-editor": "./bin/cli.js"
  },
  "files": [
    "bin/cli.js",
    "dist/",
    "public/keycloak-upstream/",
    "public/keycloak-dev-resources/",
    "tools/preview-renderer/preview-renderer.jar",
    "tools/preview-renderer/lib/",
    "tools/generate-preview.ts"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "keycloak",
    "theme",
    "editor",
    "login",
    "freemarker",
    "css",
    "visual-editor"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:jar": "mvn -f tools/preview-renderer/pom.xml clean package -q && node -e \"const fs=require('fs'),p=require('path'),lib=p.join('tools/preview-renderer','lib');fs.rmSync(lib,{recursive:true,force:true});fs.copyFileSync('tools/preview-renderer/target/preview-renderer.jar','tools/preview-renderer/preview-renderer.jar');fs.cpSync('tools/preview-renderer/target/lib',lib,{recursive:true})\"",
    "build:cli": "tsup bin/cli.ts --format esm --out-dir bin --target node18 --no-clean --no-splitting --external keycloakify && node -e \"const f='bin/cli.js';require('fs').writeFileSync(f,'#!/usr/bin/env node\\n'+require('fs').readFileSync(f,'utf8'))\"",
    "prepublishOnly": "npm run build && npm run build:jar && npm run build:cli",
    "lint": "eslint .",
    "prepare": "husky",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "sync:keycloak": "npx --no-install tsx tools/sync-keycloak.ts",
    "generate:preview": "npx --no-install tsx tools/generate-preview.ts"
  },
  "dependencies": {
    "@codemirror/autocomplete": "6.20.0",
    "@codemirror/lang-css": "6.3.1",
    "@mdi/js": "^7.2.96",
    "@mdi/react": "^1.6.1",
    "@patternfly-v5/patternfly": "npm:@patternfly/patternfly@^5.4.2",
    "@patternfly/react-core": "6.3.1",
    "@patternfly/react-icons": "6.3.1",
    "@patternfly/react-styles": "6.3.1",
    "@uiw/react-codemirror": "4.25.4",
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "fflate": "0.8.2",
    "file-selector": "2.1.2",
    "immer": "^11.1.4",
    "jiti": "^2.6.1",
    "keycloakify": "^11.15.1",
    "open": "^11.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sirv": "^3.0.2",
    "zustand": "5.0.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "7.4.3",
    "@eslint-react/eslint-plugin": "2.13.0",
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.6.0",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "9.39.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.5.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "tailwindcss": "4.1.18",
    "tsup": "^8.5.1",
    "tsx": "4.20.6",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-static-copy": "^3.1.2",
    "vitest": "^2.1.8"
  }
}
